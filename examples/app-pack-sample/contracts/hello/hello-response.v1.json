{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://demon.dev/schemas/hello-world/hello-response.v1.json",
  "title": "Hello World Response",
  "description": "Output from the hello world capsule",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "message": {
      "type": "string",
      "description": "The echoed greeting message"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when the message was processed"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "capsule": {
          "type": "string",
          "description": "Name of the capsule that generated this response"
        },
        "executionTime": {
          "type": "number",
          "description": "Execution time in milliseconds"
        }
      }
    }
  },
  "required": ["message"]
}
