{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://demon.meta/contracts/events.graph.tag.updated.v1.json",
  "title": "GraphTagUpdatedV1",
  "type": "object",
  "required": [
    "event",
    "graphId",
    "tenantId",
    "projectId",
    "namespace",
    "tag",
    "ts",
    "action"
  ],
  "properties": {
    "event": { "const": "graph.tag.updated:v1" },
    "graphId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._-]{1,64}$"
    },
    "tenantId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._-]{1,64}$"
    },
    "projectId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._-]{1,64}$"
    },
    "namespace": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._-]{1,64}$"
    },
    "tag": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._-]{1,64}$"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "action": {
      "type": "string",
      "enum": ["set", "delete"]
    },
    "commitId": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "previousCommitId": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "actor": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["user", "service"]
        },
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9._-]{1,64}$"
        },
        "displayName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": { "action": { "const": "set" } },
        "required": ["action"]
      },
      "then": {
        "required": ["commitId"]
      }
    }
  ]
}
